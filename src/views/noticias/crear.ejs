<div id="formulario-crear-noticia">
    <form name="noticia" action="/noticias/crear" method="POST" enctype="multipart/form-data">
        <style>
            .btn {
                border: none;
                background-color: #04AA6D;
                padding: 14px 28px;
                font-size: 16px;
                cursor: pointer;
                display: inline-block;
            }

            .btn:hover {
                background: #eee;
            }

            .success:hover {
                background-color: #04AA6D;
                color: white;
            }

            .success {
                color: white;
            }

            /* Agregado para alinear el botón y ajustar el espacio */
            .mb-3 {
                margin-bottom: 15px;
            }

            /* Agregado para el estilo del input de archivo */
            .custom-file-input {
                color: transparent;
            }

            .custom-file-input::-webkit-file-upload-button {
                visibility: hidden;
            }

            .custom-file-input::before {
                content: 'Seleccionar imagen';
                color: #333;
                display: inline-block;
                background: #eee;
                border: 1px solid #333;
                border-radius: 5px;
                padding: 8px 12px;
                outline: none;
                white-space: nowrap;
                cursor: pointer;
            }

            .custom-file-input:hover::before {
                background: #ddd;
            }

            .custom-file-input:active::before {
                background: #bbb;
            }
        </style>

        <div class="mb-3">
            <label for="titulo_noticia" class="form-label">Título</label>
            <input type="text" class="form-control" name="titulo" required>
        </div>

        <div class="mb-3">
            <label for="desc_noticia" class="form-label">Descripción</label>
            <textarea type="text" class="form-control" name="contenido" required></textarea>
        </div>

        <!-- Agregado campo para cargar imagen -->
        <div class="mb-3">
            <label for="imagen_noticia" class="form-label">Imagen</label>
            <input type="file" class="form-control custom-file-input" name="imagen" accept="image/*" required>
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
</div>
